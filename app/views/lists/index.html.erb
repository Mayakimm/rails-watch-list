<nav class="navbar sticky-top navbar-light bg-white justify-content-center">
  <div class="container m-0 p-0">
    <div>
    <a class="navbar-brand" href="#">
      <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTFl1uRphOHe0ssyZoZq-YV-PohQbh9EkmNpA&s" alt="" width="40" height="40">
    </a>
    </div>
    <div>
      <%= link_to "My lists", root_path, class: "text-decoration-none text-black p-3" %>
      <%= link_to "New list", new_list_path, class: "text-decoration-none text-black p-3" %>
    </div>
  </div>
</nav>

<div class="banner">
  <div class="container">
    <h1>Save any kind of movies</h1>
    <h2><%=@lists.sample.name%></h2>
  </div>
</div>

<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-8">
      <h3 class="text-black text-start">My lists</h3>
        <div class="card-list d-flex justify-content-start mt-3">
          <% @lists.each do |list| %>
            <% if list.photo.attached? %>
              <div class="card-item me-5 position-relative" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(list.photo.key) %>'); background-size: cover; background-position: center;">
                <%= link_to list.name, list_path(list), class: "text-decoration-none text-white position-absolute top-50 start-50 translate-middle" %>
              </div>
            <% else %>
              <div class="card-item me-5 position-relative" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)); background-size: cover; background-position: center;">
                <%= link_to list.name, list_path(list), class: "text-decoration-none text-white position-absolute top-50 start-50 translate-middle" %>
              </div>
            <% end %>
          <% end %>
        </div>
    </div>


    <div class="col-4">
      <%= link_to "Add a new list", new_list_path, class: "btn btn-primary" %>
    </div>

  </div>
</div>
